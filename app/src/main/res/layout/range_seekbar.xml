<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/track"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/track_gray"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <ImageView
        android:id="@+id/start_thumb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/default_thumb"
        app:layout_constraintStart_toStartOf="@id/track"
        app:layout_constraintEnd_toStartOf="@id/track"
        app:layout_constraintTop_toTopOf="@id/track"
        app:layout_constraintBottom_toBottomOf="@id/track"/>

    <ImageView
        android:id="@+id/end_thumb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/default_thumb"
        app:layout_constraintStart_toEndOf="@id/track"
        app:layout_constraintEnd_toEndOf="@id/track"
        app:layout_constraintTop_toTopOf="@id/track"
        app:layout_constraintBottom_toBottomOf="@id/track"/>
</androidx.constraintlayout.widget.ConstraintLayout>